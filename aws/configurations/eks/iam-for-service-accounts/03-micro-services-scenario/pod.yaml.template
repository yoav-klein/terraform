kind: ServiceAccount
apiVersion: v1
metadata:
  name: developer
  annotations:
    eks.amazonaws.com/role-arn: arn:aws:iam::<account_id>:role/developer
---
kind: Pod
apiVersion: v1
metadata:
  name: aws
spec:
  serviceAccount: developer
  containers:
  - name: aws
    image: amazon/aws-cli
    command: ["sleep", "3600"]


